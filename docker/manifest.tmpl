image: tphoney/git:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: tphoney/git:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{/if}}
    platform:
      architecture: amd64
      os: linux
  -
    image: tphoney/git:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{/if}}
    platform:
      variant: v8
      architecture: arm64
      os: linux
  -
    image: tphoney/git:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{/if}}
    platform:
      variant: v7
      architecture: arm
      os: linux
  -
    image: tphoney/git:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{/if}}
    platform:
      architecture: s390x
      os: linux
  -
    image: tphoney/git:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-ltsc2022-amd64
    platform:
      architecture: amd64
      os: windows
      version: ltsc2022